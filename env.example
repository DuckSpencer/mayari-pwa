# Mayari PWA - Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AI Integration - OpenRouter (Claude Sonnet 4)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Integration - OpenAI (Backup for image generation)
OPENAI_API_KEY=your_openai_api_key_here

# AI Integration - FLUX.1 (Primary image generation - cost-effective)
FLUX_API_KEY=your_flux_api_key_here

# Docker Configuration
NODE_ENV=development
PORT=3001

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379

# PostgreSQL Configuration (optional - for local development)
POSTGRES_URL=postgresql://mayari_user:mayari_password@localhost:5432/mayari_dev

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001